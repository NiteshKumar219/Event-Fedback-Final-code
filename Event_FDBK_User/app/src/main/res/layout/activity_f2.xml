<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkimgs"
    tools:context="org.mgr.fdbk_v1.F2" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="443dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25dp"
                android:text="" />

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:layout_marginTop="20dp" />

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:orientation="horizontal"
                android:layout_marginTop="18dp" >

                <RadioButton
                    android:id="@+id/r21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/r22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />
            </RadioGroup>

           <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:orientation="horizontal"
                android:layout_marginTop="18dp" >

                <RadioButton
                    android:id="@+id/r31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/r32"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No" />
            </RadioGroup>

           <TextView
               android:id="@+id/textView2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentLeft="true"
               android:layout_below="@+id/textView1"
               android:layout_marginLeft="30dp"
               android:layout_marginTop="18dp"
               android:text="How you know about this Event ? " />

           <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="30dp"
               android:text="Whether the event started on-time ? "
               android:layout_below="@+id/spinner1"
               android:layout_alignLeft="@+id/spinner1"
               android:layout_alignStart="@+id/spinner1" />

           <TextView
               android:id="@+id/textView4"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="29dp"
               android:text="Wtether the Event Venue was clean and Comfortable ? "
               android:layout_below="@+id/radioGroup2"
               android:layout_alignLeft="@+id/radioGroup2"
               android:layout_alignStart="@+id/radioGroup2" />

           <Button
               android:id="@+id/button1"
               android:layout_width="100dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/radioGroup3"
               android:layout_centerHorizontal="true"
               android:layout_marginTop="24dp"
               android:background="@drawable/txtbk"
               android:onClick="moveNext"
               android:text="Next"
               android:textColor="#FFFFFF" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>