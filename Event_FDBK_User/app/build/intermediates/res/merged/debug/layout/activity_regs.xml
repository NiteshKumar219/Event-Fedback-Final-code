<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bkimg"
    tools:context="org.mgr.fdbk_v1.REGS" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        
        <RelativeLayout
            android:layout_width="match_parent"
        	android:layout_height="443dp" >

            <TextView
                android:id="@+id/textVie1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:inputType="phone"
                android:hint="@string/reg_phno"
                android:ems="10" />

            <Button
                android:id="@+id/button1"
                android:layout_width="95dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="65dp"
                android:layout_marginTop="300dp"
                android:textColor="#FFFFFF"
		        android:background="@drawable/txtbk"
                android:onClick="storeData"
                android:text="@string/reg_sbt" />

            <EditText
                android:id="@+id/editText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/editText2"
                android:layout_below="@+id/textVie1"
                android:layout_marginTop="70dp"
                android:ems="10"
                android:hint="@string/reg_em"
                android:inputType="textEmailAddress" />
            
        </RelativeLayout>
        
    </ScrollView>
    
</RelativeLayout>
